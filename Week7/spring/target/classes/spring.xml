<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="company" class="com.sapient.week7.spring.Company">
		<property name="employees">
			<array>
				<bean class="com.sapient.week7.spring.Employee">
					<property name="id" value="1"></property>
					<property name="name" value="Evleen"></property>
					<property name="city" value="Pune"></property>
				</bean>

				<bean class="com.sapient.week7.spring.Employee">
					<property name="id" value="2"></property>
					<property name="name" value="Raj"></property>
					<property name="city" value="Mumbai"></property>
				</bean>

				<bean class="com.sapient.week7.spring.Employee">
					<property name="id" value="3"></property>
					<property name="name" value="Raju"></property>
					<property name="city" value="Delhi"></property>
				</bean>

			</array>
		</property>
	</bean>
	<bean id="employee" class="com.sapient.week7.spring.Employee">
		<!-- <property name="id">10</property> -->
	</bean>
</beans>